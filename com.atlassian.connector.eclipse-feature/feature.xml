<?xml version="1.0" encoding="UTF-8"?>
<feature
      id="com.atlassian.connector.eclipse"
      label="%featureName"
      version="1.0.0.qualifier"
      provider-name="%providerName"
      plugin="com.atlassian.connector.eclipse.ui">

   <description url="http://atlassian.com">
      %description
   </description>

   <copyright>
      %copyright
   </copyright>

   <license url="license.html">
      %license
   </license>

   <url>
      <update label="%updateSiteName" url="http://update.atlassian.com/atlassian-eclipse-plugin"/>
   </url>

   <includes
         id="com.atlassian.connector.eclipse.crucible"
         version="0.0.0"
         name="Crucible Integration"/>

   <includes
         id="com.atlassian.connector.eclipse.bamboo"
         version="0.0.0"
         name="Bamboo Integration"/>

   <includes
         id="com.atlassian.connector.eclipse.subclipse"
         version="0.0.0"
         name="Subclipse Integration"
         optional="true"/>

   <requires>
      <import feature="org.eclipse.mylyn.jira_feature" version="3.1.0.I20090217" match="equivalent"/>
      <import feature="org.eclipse.mylyn_feature" version="3.1.0.I20090217" match="equivalent"/>
   </requires>

</feature>
