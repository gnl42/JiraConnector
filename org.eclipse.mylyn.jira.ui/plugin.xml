<plugin>  

   <extension
         point="org.eclipse.mylyn.tasks.ui.editors">
      <pageFactory
            class="org.eclipse.mylyn.internal.jira.ui.editor.JiraTaskEditorPageFactory"
            id="org.eclipse.mylyn.jira.ui.pageFactory">
      </pageFactory>            
   </extension>

   <extension
         id="org.eclipse.mylyn.jira.repository"
         name="%repository.name"
         point="org.eclipse.mylyn.tasks.ui.repositories">

      <connectorCore
            id="jira"
            class="org.eclipse.mylyn.internal.jira.core.JiraRepositoryConnector"
            name="%JiraRepositoryConnector.name"/>
	  <connectorUi
         brandingIcon="icons/eview16/jira-logo.gif"
         class="org.eclipse.mylyn.internal.jira.ui.JiraConnectorUi"
         name="%JiraConnectorUi.name"
         overlayIcon="icons/eview16/overlay-jira.gif"/>
   <taskListMigrator
         class="org.eclipse.mylyn.internal.jira.ui.JiraTaskListMigrator">
   </taskListMigrator>
            
   </extension>

   <extension
         point="org.eclipse.mylyn.tasks.core.templates">
      <repository
            addAutomatically="false"
            anonymous="false"
            repositoryKind="jira"
            label="Codehaus"
            urlRepository="http://jira.codehaus.org/"/>
      <repository
            addAutomatically="false"
            anonymous="false"
            repositoryKind="jira"
            label="Apache"
            urlRepository="http://issues.apache.org/jira/"/>
   </extension>

</plugin>
