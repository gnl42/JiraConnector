					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-compiler-plugin</artifactId>
				<configuration>
					<release>${java.version}</release>
					<optimize>true</optimize>
					<showWarnings>false</showWarnings>
