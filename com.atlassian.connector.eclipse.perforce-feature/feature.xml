<?xml version="1.0" encoding="UTF-8"?>
<feature
      id="com.atlassian.connector.eclipse.perforce"
      label="%featureName"
      version="3.1.0.qualifier"
      provider-name="%providerName"
      plugin="com.atlassian.connector.eclipse.branding.ui">

   <description url="http://atlassian.com">
      %description
   </description>

   <copyright>
      %copyright
   </copyright>

   <license url="license.html">
      %license
