   <plugin
         id="com.atlassian.connector.eclipse.perforce.ui"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

   <plugin
         id="com.atlassian.connector.eclipse.perforce.core"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

   <plugin
         id="com.perforce.p4java"
         download-size="0"
